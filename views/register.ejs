<% include partial/head %>
    <body id="form_layout">
      <div class="container">
        <div class="row text-center">
          <img class="img-rounded" src="/img/library-logo.jpg" alt="AuthApp Login Image">
          <h2 class="heading text-primary">Library Application | Register</h2>
        </div>
        <div class="row">

          <% if(error) { %>
            <div class = "alert alert-danger alert-dismissable">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
              <%= error %>
            </div>
          <% } %>

          <form class="form-signin" method = 'post' action = '/register'>
            <!--<a class="btn btn-primary btn-block"><i></i>Register with Facebook</a>
            <a class="btn btn-default btn-block"><i></i>Register with Github</a>-->
            <br>
            <label for="full_name" class="sr-only">Full Name</label>
            <input type="text" id="full_name" name="full_name" class="form-control" placeholder="Full Name" required autofocus>
            <label for="user_name" class="sr-only">User Name</label>
            <input type="text" id="user_name" name="user_name" class="form-control" placeholder="User Name" required autofocus>
            <label for="email" class="sr-only">Email address</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email address" required autofocus>  
            <label for="password" class="sr-only">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
            <label for="password1" class="sr-only">Confirm Password</label>
            <input type="password" id="password1" name="password1" class="form-control" placeholder="Confirm Password" required>
            
            <button class="btn btn-primary btn-block" type = "submit">Sign Up</button>
            <br>
            <p>Have An Account? <a href="/">Please Login</a></p>
          </form>
        </div>
      </div>
      <% include partial/footer %>
    </body>s